{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
        {
            "files": ["*.controller.ts", "src/middlewares/*.ts"],
            "rules": {
                "@typescript-eslint/explicit-function-return-type": "off"
            }
        },
        {
            "files": ["*.route.ts"],
            "rules": {
                "@typescript-eslint/no-misused-promises": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
    }
}
